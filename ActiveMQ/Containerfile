# Use official Apache ActiveMQ Classic image
FROM apache/activemq-classic:5.19.0

# Set system property for trusted packages
ENV ACTIVEMQ_OPTS="-Dorg.apache.activemq.SERIALIZABLE_PACKAGES=de.tu_berlin.cit.vs.jms.common,java.math"

# Fix jetty host binding and copy custom config
RUN sed -i 's/127.0.0.1/0.0.0.0/g' /opt/apache-activemq/conf/jetty.xml
COPY activemq.xml /opt/apache-activemq/conf/activemq.xml

# Expose ports
EXPOSE 61616 8161 5672 61613 1883

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8161/ || exit 1
